<Window x:Class="sanjigen.WpfRenderer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sanjigen.WpfRenderer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        UseLayoutRounding="True" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded">
    <Grid>
        <Image x:Name="FrontBuffer" Width="640" Height="480" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <TextBlock x:Name="FPStext" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="??? fps" VerticalAlignment="Bottom" Foreground="#D1FFFFFF">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="1"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
